
<h1>Create Food</h1>
<div class="wrapper-sm" ng-controller="FoodCtrl as vm">
    <div class="row">
        <div class="col-md-4">
            <div class="panel panel-default">
                <div class="panel-heading font-bold">Create form</div>
                <div class="panel-body">
                    <form role="form">
                        <div class="form-group">
                            <label>Name of Food</label>
                            <input type="text" class="form-control" ng-model="vm.model.Name">
                        </div>
                        <div class="form-group">
                            <label>Price</label>
                            <input type="text" class="form-control" ng-model="vm.model.Price">
                        </div>
                        <div class="form-group">
                            <label>Price Promotion</label>
                            <input type="text" class="form-control" ng-model="vm.model.PricePromotion">
                        </div>
                        <button type="submit" class="btn btn-primary" ng-click="vm.submit()">Submit</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
